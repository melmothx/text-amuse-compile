# Top-level filter (only include the following...)
^(?!(?:script|examples|lib|bin|inc|t|xt|maint)/|(?:(?:Makefile|Build)\.PL|README|MANIFEST|Changes|META\.(?:yml|json))$)

# Avoid version control files.
\bRCS\b
\bCVS\b
,v$
\B\.svn\b
\b_darcs\b
# (.git only in top-level, hence it's blocked above)

# Avoid temp and backup files.
~$
\.tmp$
\.old$
\.bak$
\..*?\.sw[po]$
\#$
\b\.#

# avoid OS X finder files
\.DS_Store$

# ditto for Windows
\bdesktop\.ini$
\b[Tt]humbs\.db$

# Avoid patch remnants
\.orig$
\.rej$
t/testfile/.*\.(aux|html|log|ok|pdf|tex|snm|vrb|toc|epub|lock|test|zip|status|idx|ind|ilg)$
t/manual/.*\.(aux|html|log|ok|pdf|tex|toc|epub|lock|test|zip|status)$
t/merged-dir/.*ok$
t/merged-dir-2/my-test.*
t/merged-dir/.*status$
fulltest.sh

